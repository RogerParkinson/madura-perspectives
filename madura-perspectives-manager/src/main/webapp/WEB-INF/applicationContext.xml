<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/aop
        					http://www.springframework.org/schema/aop/spring-aop.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="nz.co.senanque.perspectivemanager, nz.co.senanque.login" />
	<bean id="messageSource" class="nz.co.senanque.resourceloader.ResourceBundleMessageSourceExt">
		<property name="basenames">
			<list>
				<value>ApplicationMessages</value>
			</list>
		</property>
	</bean>
<!--
	This is an example of a production bundle manager, it uses a JNDI reference to locate a local directory that holds the bundles
	The directory is scanned every 10 seconds for changes in this configuration. 

 	<jee:jndi-lookup id="bundlesDir" jndi-name="java:/comp/env/BundlesDir" expected-type="java.lang.String" />
	<bean id="bundleManager" class="nz.co.senanque.madura.bundle.BundleManagerWeb">
		<property name="directory" ref="bundlesDir"/>
		<property name="time" value="10000"/>
		<property name="inheritableBeans">
			<map>
				<entry key="bundleManager" value-ref="bundleManager"/>
			</map>
		</property>
	</bean>
 -->

<!--
 	This bundle manager configuration is suitable for demos. It locates a fixed set of bundles from a directory in the war file (WEB-INF/bundles)
	Useful for demos but not for production because you cannot dynamically update the bundles.
 -->	
	<bean id="bundleManager" class="nz.co.senanque.madura.bundle.BundleManagerWeb">
		<property name="exportedBeans">
			<map>
				<entry key="bundleManager" value-ref="bundleManager"/>
			</map>
		</property>
	</bean>	

</beans>